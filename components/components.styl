//Vars-Fonts
roboto= -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
//Vars-Screens
desktop= 48em
//Vars-Shadows
fast-shadow= 0 2px 2px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08)
/*
Reset
*/
*
    box-sizing border-box
    font-size 100%
    line-height 1.1
    list-style-type none
    margin 0
    padding 0
    a, a:hover
        text-decoration none 
    audio, img, iframe, video 
        display inline-block
        width 100%    
/*Buttons*/
.bt
    border-style solid 
    border-width 0.02em
    border-radius 3px
    box-shadow fast-shadow
    color #fff!important
    display block
    font-size 0.98em!important
    font-weight bold
    margin 0.3em 1.6em 
    padding 0.8em 1em!important
    &.bt-clean 
        background-color #fff 
        border-color #fff
        color #333!important
    &.bt-dark 
        background-color #323b44
        border-color #323b44
    &.bt-pink
        background-color #f76397
        border-color #f76397 
    &.bt-teal
        background-color #20c997
        border-color #20c997       
/*Cards*/        
.card-component
    background-color #fff
    box-shadow fast-shadow
    margin 1em auto
    min-height 12em
    width 90%
    .card-header, .card-body, .card-footer 
        margin 0.5em auto 
        padding 0.8em
        width 80%
    .card-header
        h2, h3, p
            font-family Arial, Helvetica, sans-serif 
        h2             
            font-size 1.9em
            font-weight 800
    .card-footer
        background-color #eee
    @media(min-width: desktop)
        margin-top 0.8em
        min-width 30% 
        max-width 38%