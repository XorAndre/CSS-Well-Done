.navbar
    background-color #fff
    box-shadow fast-shadow    
    position relative
    width 100%
    .content-nav
        display none    
    .links
        a
          color #222 
          display block
          font-family roboto
          font-size 0.9em
          margin 1em
          padding 0.3em 0.8em   
    @media(min-width: desktop)
        min-height 100vh
        width 20%
        .content-nav
            display block
        .links             
            position fixed
            top 7em
        
            