.code
    display block
    max-height 500px
    width 100%
    margin 20px 0
    font-family monospace
    font-size 13px
    line-height 23px
    position relative
    overflow auto
    .numbers
        padding 10px
        text-align right
    .source
        padding 10px 0
        .line
            padding 0 10px
            &:nth-child(2n)
            .comment
                font-style italic
    .copy
        position absolute
        right 10px
        top 5px
        font-size 12px
        text-decoration underline
        cursor pointer
.code .numbers, .code .source
    float left

.code-style-light
    color #444
    background #f5f5f5
    .numbers
        color #999
        background #fff
    .source
        .line
            &:nth-child(2n)
                background #f2f2f2
        .comment
            color #3FAB46
        .c-pppvaovcsn
            color #E05366
        .c-iescbrnu
            color #6593E0

.code-style-dark
    color #E6E6E6
    background #333
    .numbers
        color #999
        background #fff
    .source
        .line
            &:nth-child(2n)
                background #363636
        .comment
            color #588A5B
        .sharp-keywords
            color #DF5D6E
        .sharp-default-types
            color #718DBD